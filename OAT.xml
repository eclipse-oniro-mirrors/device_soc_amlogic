<configuration>
    <oatconfig>
        <licensefile>LICENSE</licensefile>
        <policylist>
            <policy name="projectPolicy" desc="">
                <!--policyitem type="compatibility" name="GPL-2.0+" path="abc/.*" desc="Process that runs independently, invoked by the X process."/-->
                <policyitem type="copyright" name="Huawei Technologies Co., Ltd." path=".*" rule="may" group="defaultGroup" filefilter="copyrightPolicyFilter" desc="Developed by Huawei Technologies"/>
                <policyitem type="copyright" name="Huawei Device Co., Ltd." path=".*" rule="may" group="defaultGroup" filefilter="copyrightPolicyFilter" desc="Developed by Huawei Device"/>
                <policyitem type="copyright" name="Amlogic, Inc." path=".*" rule="may" group="defaultGroup" filefilter="copyrightPolicyFilter" desc="Developed By Amlogic"/>
                <policyitem type="copyright" name="Unionman Technology Co., Ltd." path=".*" rule="may" group="defaultGroup" filefilter="copyrightPolicyFilter" desc="Developed By Unionman"/>
                <policyitem type="copyright" name="Institute of Software, CAS." path=".*" rule="may" group="defaultGroup" filefilter="copyrightPolicyFilter" desc="Developed By ISCAS"/>           
                <policyitem type="license" name="GPL" path=".*" desc="linux kernel adapter codes"/>
		<policyitem type="license" name="BSD" path=".*" desc="huawei codes"/>
                <policyitem type="license" name="MIT" path=".*" desc="Intel code"/>
                <policyitem type="copyright" name="Intel Corporation" path=".*" desc="Intel code"/>
	        </policy>
        </policylist>
        <filefilterlist>
            <filefilter name="defaultFilter" desc="Files not to check">
                <filteritem type="filepath" name="hardware/isp/bin/*" desc="isp bin file"/>
                <filteritem type="filepath" name="hardware/isp/bin64/*" desc="isp bin file"/>
                <filteritem type="filepath" name="hardware/isp/lib/*" desc="isp lib file"/>
                <filteritem type="filepath" name="hardware/isp/lib64/*" desc="isp lib file"/>
                <filteritem type="filepath" name="hardware/isp/modules/*" desc="isp kernel modules file"/>
                <filteritem type="filepath" name="hardware/ge2d/lib64/*" desc="so file"/>
                <filteritem type="filepath" name="hardware/ge2d/lib/*" desc="so file"/>
                <filteritem type="filepath" name="hardware/audio/lib/*" desc="audio 32bit libs file"/>
                <filteritem type="filepath" name="hardware/audio/lib64/*" desc="audio 64bit libs file"/>
                <filteritem type="filepath" name="hardware/gpu/lib/*" desc="gpu 32bit libs file"/>
                <filteritem type="filepath" name="hardware/gpu/lib64/*" desc="gpu 64bit libs file"/>
                <filteritem type="filepath" name="hardware/gpu/modules/*" desc="gpu kernel modules file"/>
                <filteritem type="filepath" name="hardware/media/modules/*" desc="media kernel modules file"/>
                <filteritem type="filepath" name="hardware/media/firmware/*" desc="media firmware"/>
                <filteritem type="filepath" name="hardware/vpcodec/lib/*" desc="video codec libs file"/>
                <filteritem type="filepath" name="hardware/wifi/proc/sys/net/ipv4/ping_group_range/*" desc="project configuration file"/>
            </filefilter>
            <filefilter name="defaultPolicyFilter" desc="Filters for compatibilityï¼Œlicense header policies">
                <!--filteritem type="filename" name="*.uvwxyz" desc="Describe the reason for filtering scan results"/-->
                <!--filteritem type="filepath" name="abcdefg/.*.uvwxyz" desc="Describe the reason for filtering scan results"/-->
                <!--filteritem type="filepath" name="projectroot/[a-zA-Z0-9]{20,}.sh" desc="Temp files"/-->
            </filefilter>
            <filefilter name="copyrightPolicyFilter" desc="Filters for copyright header policies">
                <!--filteritem type="filename" name="*.uvwxyz" desc="Describe the reason for filtering scan results"/-->
                <!--filteritem type="filepath" name="abcdefg/.*.uvwxyz" desc="Describe the reason for filtering scan results"/-->
                <!--filteritem type="filepath" name="projectroot/[a-zA-Z0-9]{20,}.sh" desc="Temp files"/-->
            </filefilter>
            <filefilter name="licenseFileNamePolicyFilter" desc="Filters for LICENSE file policies">
                <!--filteritem type="filename" name="*.uvwxyz" desc="Describe the reason for filtering scan results"/-->
                <!--filteritem type="filepath" name="abcdefg/.*.uvwxyz" desc="Describe the reason for filtering scan results"/-->
                <!--filteritem type="filepath" name="projectroot/[a-zA-Z0-9]{20,}.sh" desc="Temp files"/-->
            </filefilter>
            <filefilter name="readmeFileNamePolicyFilter" desc="Filters for README file policies">
                <!--filteritem type="filename" name="*.uvwxyz" desc="Describe the reason for filtering scan results"/-->
                <!--filteritem type="filepath" name="projectroot/[a-zA-Z0-9]{20,}.sh" desc="Temp files"/-->
            </filefilter>
            <filefilter name="readmeOpenSourcefileNamePolicyFilter" desc="Filters for README.OpenSource file policies">
                <!--filteritem type="filename" name="*.uvwxyz" desc="Describe the reason for filtering scan results"/-->
                <!--filteritem type="filepath" name="abcdefg/.*.uvwxyz" desc="Describe the reason for filtering scan results"/-->
                <!--filteritem type="filepath" name="projectroot/[a-zA-Z0-9]{20,}.sh" desc="Temp files"/-->
            </filefilter>
            <filefilter name="binaryFileTypePolicyFilter" desc="Filters for binary file policies">
                <filteritem type="filepath" name="hardware/gpu/lib/*" desc="gpb 32bit libs file"/>
                <filteritem type="filepath" name="hardware/gpu/lib64/*" desc="gpb 64bit libs file"/>
                <filteritem type="filepath" name="hardware/isp/*" desc="isp lib and bin files"/>
                <filteritem type="filepath" name="hardware/audio/lib/*" desc="audio 32bit libs file"/>
                <filteritem type="filepath" name="hardware/audio/lib64/*" desc="audio 64bit libs file"/>
                <filteritem type="filepath" name="hardware/ge2d/lib/*" desc="ge2d 32bit libs file"/>
                <filteritem type="filepath" name="hardware/ge2d/lib64/*" desc="ge2d 64bit libs file"/>
            </filefilter>

        </filefilterlist>
        <licensematcherlist>
        </licensematcherlist>
    </oatconfig>
</configuration>
